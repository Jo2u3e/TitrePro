{% extends 'base.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block content %}

   <h2> Nos Produits </h2>

   <div class="row">  
         
         {% for product in products %}
           <div class="col-md-4">
                <div class="product-item">
                <img src="/uploads/{{product.illustration}}" alt="" width="250 px" height="250 px"   >
                    <h5>  {{product.name}} </h5>
                    <span>  {{product.subtitle}}  </span>

                {{product.price}}
                </div>
           </div>
         {% endfor %}
   </div>

   


{% endblock %}
